{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "build",
        "rootDir": "..",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": false,
        "incremental": true,
        "lib": [ "es2017", "dom" ]
    },
    "moduleResolution": "node",
    "typeRoots": [
        "./node_modules/@types/"
    ],
    "include": [
        "src/**/*.ts",
        "spec/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
